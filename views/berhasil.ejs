<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Berhasil Membuat Akun</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="assets/css/loginform.css">
    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: -43px;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
            animation: fadeIn 0.3s;
        }

        .modal-content {
            background-color: #fff;
            margin: 10% auto;
            padding: 20px;
            border-radius: 10px;
            width: 90%;
            max-width: 400px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            animation: slideIn 0.4s;
            position: relative;
            text-align: center;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            position: absolute;
            right: 10px;
            top: 10px;
            cursor: pointer;
        }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
        }

        .modal-page {
            display: none;
        }

        .modal-page.active {
            display: block;
        }

        .modal-page img {
            width: 184px;
            height: auto;
            margin-bottom: 20px;
        }

        .modal-page p {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .modal-page button {
            margin: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            background-color: #4CAF50;
            color: white;
            transition: background-color 0.3s;
        }

        .modal-page button:hover {
            background-color: #45a049;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>

<body>
    <div class="login-box">
        <img src="assets/images/loginform/logo.png" class="logo">
        <h2>Registration successful! Check your email to verify your account.</h2>
        <hr>
        <span>Or</span>
        <button id="no-code-btn">Tidak Menerima Kode?</button>
    </div>

    <!-- The Modal -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div id="modal-content-1" class="modal-page active">
                <img src="assets/images/spam.png" alt="Reason 1 Image">
                <p>Cek Spam Di email mu</p>
                <button id="next-1">Next</button>
            </div>
            <div id="modal-content-2" class="modal-page">
                <img src="assets/images/refesh.png" alt="Reason 2 Image">
                <p>Refesh Spam.</p>
                <button id="back-1">Back</button>
                <button id="next-2">Next</button>
            </div>
            <div id="modal-content-3" class="modal-page">
                <img src="assets/images/kliktombol.png" alt="Reason 3 Image">
                <p>Verifikasi akun mu.</p>
                <button id="back-2">Back</button>
                <button id="whatsapp-btn">Tetap Tidak Menerima Kode?</button>
            </div>
        </div>
    </div>

    <script>
        var modal = document.getElementById("myModal");
        var btn = document.getElementById("no-code-btn");
        var span = document.getElementsByClassName("close")[0];

        btn.onclick = function () {
            modal.style.display = "block";
        }

        span.onclick = function () {
            modal.style.display = "none";
        }

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        document.getElementById("next-1").onclick = function () {
            document.getElementById("modal-content-1").classList.remove("active");
            document.getElementById("modal-content-2").classList.add("active");
        }

        document.getElementById("back-1").onclick = function () {
            document.getElementById("modal-content-2").classList.remove("active");
            document.getElementById("modal-content-1").classList.add("active");
        }

        document.getElementById("next-2").onclick = function () {
            document.getElementById("modal-content-2").classList.remove("active");
            document.getElementById("modal-content-3").classList.add("active");
        }

        document.getElementById("back-2").onclick = function () {
            document.getElementById("modal-content-3").classList.remove("active");
            document.getElementById("modal-content-2").classList.add("active");
        }

        document.getElementById("whatsapp-btn").onclick = function () {
            var phoneNumber = "+6285156591459&"; // Ganti dengan nomor telepon tujuan
            var message = "Halo, saya tidak menerima kode verifikasi.";
            var whatsappUrl = "https://api.whatsapp.com/send?phone=" + phoneNumber + "&text=" + encodeURIComponent(message);
            window.open(whatsappUrl, '_blank');
        }
    </script>
</body>

</html>
